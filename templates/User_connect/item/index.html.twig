{% extends 'User_connect/base_connect.html.twig' %}

{% block title %}Item index{% endblock %}

{% block body %}
    <h1>Item index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Content</th>
                <th>DateAtCreated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in todoList %}
            <tr>
                <td>{{ item.id }}</td>
                <td>{{ item.name }}</td>
                <td>{{ item.content }}</td>
                <td>{{ item.dateAtCreated ? item.dateAtCreated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('item_show', {'id': item.id, 'user_id':user.id}) }}">show</a>
                    <a href="{{ path('item_edit', {'id': item.id, 'user_id':user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('item_new', {'user_id':user.id}) }}">Create new</a>
{% endblock %}
