{% extends 'User_connect/base_connect.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    <h1>Item</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ item.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ item.content }}</td>
            </tr>
            <tr>
                <th>DateAtCreated</th>
                <td>{{ item.dateAtCreated ? item.dateAtCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('item_index', {'user_id':user.id}) }}">back to list</a>

    <a href="{{ path('item_edit', {'id': item.id, 'user_id':user.id}) }}">edit</a>

    {{ include('User_connect/item/_delete_form.html.twig') }}
{% endblock %}
